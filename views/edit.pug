extends layout

block content
	h1 All courses Academy

	form(method='post')
		fieldset.form-group
			label(for='name') Name:
			input.form-control(id="name", name="name", type="text", placeholder="Enter name course", value=course.name)
			small.text-muted Add new course.
		button.btn.btn-primary(type='submit') Create course
		a.btn.btn-default(href='/courses') Cansel	