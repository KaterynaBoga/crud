extends layout

block content
	h1 All courses Academy
	a.btn.btn-primary(href='/courses/add') Created new course
	table.table.table-striped
		thead
			tr
				th Id Course
				th Course
				theadth
		tbody
			each course in courses
				tr
					td= course.id
					td= course.name
					td(style='width: 50px;'): a(href='/courses/edit/' + course.id)
						span.glyphicon.glyphicon-pencil
					td(style='width: 50px;'): a(href='/courses/delete/' + course.id)
						span.glyphicon.glyphicon-remove
